#!/bin/bash
alias keygen="openssl rand -base64 $1"
alias ls='ls --color=always'
alias cls='clear'
alias rmf='rm -rf'
alias p3='python3'
alias down='cd ~/Downloads'
alias gctl='gmailctl'
alias gp='git push'
alias gs='git status'
alias ga='git add'
alias gst='git stash'
alias gsta='git stash apply'
alias gd='git diff'
alias gpl='git pull'
alias gc='git commit'
alias gcap='git commit --amend --no-edit && git push -f'
alias gco="git branch --sort=-committerdate | fzf --header Checkout | tr '*' ' ' | xargs git checkout"
alias psql='psql-18'
alias gf='gofmt -s -d -e -w .'

# Misc
alias b="ssh gz-bastion"
alias nixd="/nix/var/nix/profiles/default/bin/nix develop"
alias nixprune="/nix/var/nix/profiles/default/bin/nix-collect-garbage --delete-older-than 7d"
alias iphonesync="rsync -av --ignore-existing /Volumes/Backups/Pictures/iPhone/ /Users/utc/Downloads/Backup/"
alias macsync='rsync -avc --ignore-existing --progress Incoming/ Backup/'

# Docker Shortcut Commands
alias dcd="docker compose down"
alias dcu="docker compose up"
alias dps="docker ps"
alias dpa="docker ps -a"
alias drm="docker rm -f"
alias dvl="docker volume ls"
alias dvrm="docker volume rm"
alias dvc="docker volume create"
alias daggerprune="dagger -c 'engine | local-cache | prune'"

# Run dockerized apps without installing dependencies
alias madness='docker run --rm -it -v $PWD:/docs -p 3000:3000 dannyben/madness server'
alias vimbgood="docker run -it --rm brandoncc/vim-be-good:stable"
